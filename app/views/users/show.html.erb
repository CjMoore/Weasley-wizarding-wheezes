<div class="row">
  <div class="col s4">
    <div class="card">
      <div class="card-content">
          <span class="card-title"><%= current_user.first_name %> <%= current_user.last_name %></span>
          <ul>
            <li>Username: <%= current_user.username %></li>
            <li>Email: <%= current_user.email %></li>
            <% if current_user.admin? %>
              <li>ADMIN</li>
              <li><%= link_to "Update Account Info", edit_user_path(current_user) %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
