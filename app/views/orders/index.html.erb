<h1><%= current_user.username %>'s Orders</h1>

<table class="striped order-index">
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Order Total</th>
      <th>Status</th>
    </tr>
  </thead>
<% @orders.each do |order| %>
    <tr>
      <td><%= button_to order.id, order_path(order), method: :get, class: "btn" %>
      <td><%= number_to_currency(order.total_price, precision: 2) %></td>
      <td><%= order.status%></td>
    </tr>
  <% end %>
  </table>
