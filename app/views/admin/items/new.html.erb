<h4>Create New Item</h4>

<%= form_for [:admin, @item], html: {multipart: true} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price%>
  <%= f.text_field :price%>

  <%= f.label :category %>
  <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name) %>
  <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true %>
  <%= f.collection_select :item, :category_id, @categories, :id, :name, include_blank: true %>

<% end %>
