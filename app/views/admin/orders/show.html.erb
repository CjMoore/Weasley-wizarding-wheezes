<h1>Order #<%= @order.id %></h1>

<div class="row">
  <div class="col s5">
    <table class="order-items">
      <thead>
        <tr>
          <th>Item</th>
          <th>Item Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= link_to order_item.item.title, admin_item_path(order_item.item) %></td>
          <td><%= number_to_currency(order_item.item.price, precision: 2) %></td>
          <td><%= order_item.quantity %></td>
          <td><%= number_to_currency(order_item.subtotal, precision: 2) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col s6">
    <table class="user-info">
      <thead>
        <tr>
          <th>Date</th>
          <th>Total</th>
          <th>Order Status</th>
          <th>Ordered By</th>
          <th>Address</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="date"><%= "#{@order.created_at}" %></td>
          <td class="total"><%= number_to_currency(@order.total_price, precision: 2) %></td>
          <td class="order-status"><%= @order.status %></td>
          <td><%= "#{@order.user.first_name} #{@order.user.last_name}" %></td>
          <td><%= @order.user.address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
