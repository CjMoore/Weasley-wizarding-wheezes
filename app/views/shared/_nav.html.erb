<ul id="dropdown1" class="dropdown-content category-dropdown">
    <li><%= link_to "All Products", items_path %></li>
    <li class="divider"></li>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_path(category.slug) %></li>
    <li class="divider"></li>
  <% end %>
</ul>

<ul id="dropdown2" class="dropdown-content admin-dropdown">
    <li><%= link_to "Admin Dashboard", admin_dashboard_path %></li>
    <li class="divider"></li>
    <li><%= link_to "All Items", admin_items_path %></li>
    <li class="divider"></li>
    <li><%= link_to "User Info", dashboard_path %></li>
    <li class="divider"></li>
    <li><%= link_to "Orders", orders_path %></li>
    <li class="divider"></li>
</ul>

<ul id="dropdown3" class="dropdown-content user-dropdown">
    <li><%= link_to "User Info", dashboard_path %></li>
    <li class="divider"></li>
    <li><%= link_to "Orders", orders_path %></li>
    <li class="divider"></li>
</ul>

<nav>
   <div class="nav-wrapper">
     <div class ="container">
       <a href="<%= root_path %>" class="brand-logo">Weasleys' Wizard Wheezes</a>
       <ul id="nav-mobile" class="right hide-on-med-and-down">
         <li><a class="dropdown-button" href="/" data-activates="dropdown1">Products</a></li>
          <% if current_user && current_admin? %>
            <li><a class="dropdown-button" href="/" data-activates="dropdown2">Admin Tools</a></li>
          <% elsif current_user %>
            <li><a class="dropdown-button" href="/" data-activates="dropdown3">User Tools</a></li>
          <% end %>
          <li>
            <% unless @cart.total_count.nil?  %>
              <a href="/cart" class="cart-nav">Cart<span class="badge green circle"><%= @cart.total_count %></span></a></li>
            <% else %>
              <a href="/cart">Cart</a></li>
            <% end %>
          <% if current_user %>
              <li><%= link_to "Logout", logout_path, method: :delete %></li>
          <% else  %>
            <li><%= link_to "Login", login_path, class: "login-link "%></li>
          <% end  %>
        </ul>
     </div>
  </div>
 </nav>
